<?xml version="1.0"?>
<odoo>
  <template id="account.report_invoice_document">
    <t t-call="web.external_layout">
      <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
      <div class="page">
        <div class="row">
          <div name="invoice_address" class="col-xs-5 col-xs-offset-7">
            <address>
              <span t-field="o.partner_id.name"/><br/>
              <span t-field="o.partner_id.street_name"/>No. <span t-field="o.partner_id.street_number"/><br/>
              <t t-if="o.partner_id.l10n_mx_edi_colony">
               Colonia <span t-field="o.partner_id.l10n_mx_edi_colony"/><br/>
             </t>
             CP. <span t-field="o.partner_id.zip"/><br/>
             <span t-field="o.partner_id.state_id.name"/>, <span t-field="o.partner_id.country_id.name"/>
             <br/>  RFC: <span t-field="o.partner_id.vat"/>
           </address>

         </div>
       </div>

       <h2>
        <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Factura</span>
        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Factura borrador</span>
        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Factura cancelada</span>
        <span t-if="o.type == 'out_refund'">Factura rectificativa</span>
        <span t-if="o.type == 'in_refund'">Nota de crédito de proveedor</span>
        <span t-if="o.type == 'in_invoice'">Factura de proveedor</span>
        <span t-field="o.number"/>
      </h2>

      <div class="row mt32 mb32">
        <div class="col-xs-2" t-if="o.name">
          <strong>Descripción:</strong>
          <p t-field="o.name"/>
        </div>
        <div class="col-xs-2" t-if="o.date_invoice">
          <strong>Fecha Factura:</strong>
          <p t-field="o.date_invoice"/>
        </div>
        <div class="col-xs-2" t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
          <strong>Fecha de Vencimiento:</strong>
          <p t-field="o.date_due"/>
        </div>
        <div class="col-xs-2" t-if="o.origin">
          <strong>Fuente:</strong>
          <p t-field="o.origin"/>
        </div>
        <div class="col-xs-2" t-if="o.partner_id.ref">
          <strong>Código de cliente:</strong>
          <p t-field="o.partner_id.ref"/>
        </div>
        <div name="reference" class="col-xs-2" t-if="o.reference">
          <strong>Referencia:</strong>
          <p t-field="o.reference"/>
        </div>
      </div>

      <!-- Is there a discount on at least one line? -->
      <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

      <table class="table table-condensed" name="invoice_line_table">
        <thead>
          <tr>
            <th>Clave SAT</th>
            <th>Descripción</th>
            <th class="hidden">Documento origen</th>
            <th class="text-right">Cantidad</th>
            <th class="text-right">Precio unitario</th>
            <th t-if="display_discount" class="text-right">Desc.(%)</th>
            <th class="text-right">Impuestos</th>
            <th class="text-right">Monto</th>
          </tr>
        </thead>
         <tbody class="invoice_tbody">
            <t t-set="lista" t-value="[]" />
            <t t-set="listat" t-value="[]" />
            <t t-foreach="o.invoice_line_ids" t-as="line">
              <t t-if="not line.product_id.code in listat">
                <t t-set="cant" t-value="0"/>
                <t t-set="subt" t-value="0"/>
                <t t-foreach="o.invoice_line_ids" t-as="l">
                  <t t-if="line.product_id.code == l.product_id.code">
                      <t t-set="cant" t-value="cant + l.quantity" />
                      <t t-set="subt" t-value="subt + l.price_subtotal" />
                  </t>
                </t>
                <t t-set="listat" t-value="listat + [(line.product_id.code)]"/>
                <t t-set="lista" t-value="lista + [(line.product_id.l10n_mx_edi_code_sat_id.code,
                line.product_id.code,
                line.product_id.name,
                line.product_id.barcode,
                line.serie,
                cant,
                line.uom_id.name,
                line.price_unit,
                line.discount,
                ', '.join(map(lambda x: (x.description or x.name),line.invoice_line_tax_ids)),
                subt)]" />
              </t>
            </t>
            <tr t-foreach="lista" t-as="l"> 
            <td><t t-esc="l[0]"/></td>
            <td>
              <span>[<t t-esc="l[1]"/>] <t t-esc="l[2]"/>
              </span>
              <t t-if="l[3]!=''">
                <br/>
                <span>Código Barras: </span><t t-esc="l[3]"/>
              </t>
              <t t-if="l[4]!=''">
                <br/>
                <span>No Serie: </span><t t-esc="l[4]"/>
              </t>
            </td>
            <td class="text-right">
              <t t-esc="l[5]"/>
              <t t-esc="l[6]"/>
            </td>
            <td class="text-right">
              <t t-esc="l[7]"/>
            </td>
            <td t-if="display_discount" class="text-right">
              <t t-esc="l[8]"/>
            </td>
            <td class="text-right">
              <t t-esc="l[9]"/>
            </td>
            <td class="text-right"  id="subtotal">
              <span t-esc="l[10]"/>
            </td>
          </tr>
          <!--<tr t-foreach="o.invoice_line_ids" t-as="l">
            <td><span t-field="l.product_id.l10n_mx_edi_code_sat_id.code"/></td>
            <td>
              <t t-if="l.name == l.product_id">
                <span t-field="l.name"/>
              </t>
              <t t-if="l.name != l.product_id">
                <span t-field="l.product_id"/>
              </t>
              <t t-if="l.product_id.barcode">
                <br/>
                <span>Código de barras: </span><span t-field="l.product_id.barcode"/>
              </t>
              <t t-if="l.serie">
                <br/>
                <span>No Serie: </span><span t-field="l.serie"/>
              </t>
            </td>
            <td class="hidden"><span t-field="l.origin"/></td>
            <td class="text-right">
              <span t-field="l.quantity"/>
              <span t-field="l.uom_id" groups="product.group_uom"/>
            </td>
            <td class="text-right">
              <span t-field="l.price_unit"/>
            </td>
            <td t-if="display_discount" class="text-right">
              <span t-field="l.discount"/>
            </td>
            <td class="text-right">
              <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
            </td>
            <td class="text-right" id="subtotal">
              <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
            </td>
          </tr>-->
          <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l">
            <td/>
            <td>&amp;nbsp;</td>
            <td class="hidden"/>
            <td/>
            <td/>
            <td t-if="display_discount"/>
            <td/>
            <td/>
          </tr>
        </tbody>
      </table>

      <div class="clearfix">
        <div id="total" class="row">
          <div class="col-xs-4 pull-right">
            <table class="table table-condensed" style="min-width: 250px;max-width: 400px;">
              <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                <td><strong>Subtotal</strong></td>
                <td class="text-right">
                  <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
              </tr>
              <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                <tr style="border-bottom:1px solid #dddddd;">
                  <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                    <td><span t-esc="amount_by_group[0]"/></td>
                    <td class="text-right">
                      <!--<span t-esc="amount_by_group[3]"/>-->
                      <span t-esc="amount_by_group[3]"/>
                    </td>
                  </t>
                  <t t-else="">
                    <td>
                      <span t-esc="amount_by_group[0]"/>
                      <span>&amp;nbsp;<span>en</span>
                      <t t-esc="amount_by_group[4]"/>
                    </span>
                  </td>
                  <td class="text-right">
                    <!--<span t-esc="amount_by_group[3]"/>-->
                    <span t-esc="amount_by_group[3]"/>
                  </td>
                </t>
              </tr>
            </t>
            <tr class="border-black">
              <td><strong>Total</strong></td>
              <td class="text-right">
                <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <p t-if="o.comment">
      <span t-field="o.comment"/>
    </p>
    <p t-if="o.payment_term_id">
      <span t-field="o.payment_term_id.note"/>
    </p>
    <p t-if="o.fiscal_position_id.note">
      <span t-field="o.fiscal_position_id.note"/>
    </p>
  </div>
</t>
</template>
</odoo>
